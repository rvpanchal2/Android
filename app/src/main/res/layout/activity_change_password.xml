<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activity.RegisterActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_Register_Back"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:padding="15dp"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/graphik_semibold"
            android:shadowColor="@color/txt_color"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Change Password"
            android:textColor="@color/txt_color"
            android:textSize="30dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@color/transparent"
            android:fontFamily="@font/chivo_regular"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="Please fill this form for change password"
            android:textAllCaps="false"
            android:textColor="@color/txt_sub_color"
            android:textSize="@dimen/txt_size" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_height"
            android:gravity="center_vertical"
            android:text="Current Password"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt_size" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_edt">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_ChangePassword_Current"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height"
                android:background="@color/transparent"
                android:fontFamily="@font/chivo_regular"
                android:hint="Current Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/txt_hint_color"
                android:textSize="@dimen/txt_size" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_ChangePassword_Current_ShowHide"
                android:layout_width="@dimen/edt_height"
                android:layout_height="@dimen/edt_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_show_password" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_height"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:text="New Password"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt_size" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_edt">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_ChangePassword_New"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height"
                android:background="@color/transparent"
                android:fontFamily="@font/chivo_regular"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/txt_hint_color"
                android:textSize="@dimen/txt_size" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_ChangePassword_New_ShowHide"
                android:layout_width="@dimen/edt_height"
                android:layout_height="@dimen/edt_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_show_password" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_height"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:text="Verify Password"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt_size" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_edt">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_ChangePassword_Verify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height"
                android:background="@color/transparent"
                android:fontFamily="@font/chivo_regular"
                android:hint="Re-Enter Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/txt_hint_color"
                android:textSize="@dimen/txt_size" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_ChangePassword_Verify_ShowHide"
                android:layout_width="@dimen/edt_height"
                android:layout_height="@dimen/edt_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_show_password" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ChangePassword_Cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_button_cancel"
                android:fontFamily="@font/chivo_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="10dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/cancel_btn_color"
                android:textSize="@dimen/txt_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ChangePassword_Submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_button"
                android:fontFamily="@font/chivo_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="10dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>