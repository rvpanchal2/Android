<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activity.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_Setting_Back"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:padding="17dp"
            android:src="@drawable/ic_close"
            android:tint="@color/theme_yellow_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <LinearLayout
                android:id="@+id/layout_Setting_ChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/img_height"
                    android:layout_height="@dimen/img_height"
                    android:padding="10dp"
                    android:src="@drawable/ic_edit_profile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/graphik_medium"
                        android:shadowColor="@color/txt_color"
                        android:text="Change Password"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/txt_size" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/graphik_medium"
                        android:shadowColor="@color/txt_color"
                        android:text="Change your security account"
                        android:textColor="@color/txt_sub_color"
                        android:textSize="@dimen/txt_small_size" />
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <LinearLayout
                android:id="@+id/layout_Setting_Account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/img_height"
                    android:layout_height="@dimen/img_height"
                    android:padding="10dp"
                    android:src="@drawable/ic_account_setting" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/graphik_medium"
                        android:shadowColor="@color/txt_color"
                        android:text="Account Settings"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/txt_size" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/graphik_medium"
                        android:shadowColor="@color/txt_color"
                        android:text="Manage Your account parameters"
                        android:textColor="@color/txt_sub_color"
                        android:textSize="@dimen/txt_small_size" />
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <LinearLayout
                android:id="@+id/layout_Setting_Privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/img_height"
                    android:layout_height="@dimen/img_height"
                    android:padding="10dp"
                    android:src="@drawable/ic_privacy_setting" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/graphik_medium"
                        android:shadowColor="@color/txt_color"
                        android:text="Privacy Settings"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/txt_size" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/graphik_medium"
                        android:shadowColor="@color/txt_color"
                        android:text="Control your privacy parameters"
                        android:textColor="@color/txt_sub_color"
                        android:textSize="@dimen/txt_small_size" />
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>