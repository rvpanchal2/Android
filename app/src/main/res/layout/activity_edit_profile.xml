<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activity.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_EditProfile_Back"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:padding="17dp"
            android:src="@drawable/ic_close"
            android:tint="@color/theme_yellow_color" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circle_theme" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:src="@drawable/ic_temp_user"
                        app:civ_border_color="@color/white"
                        app:civ_border_overlay="true"
                        app:civ_border_width="3dp" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_EditProfile_Change_Photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_corner_button_trans"
                    android:fontFamily="@font/chivo_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="10dp"
                    android:text="Upload New Photo"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_height"
                    android:gravity="center_vertical"
                    android:text="Full Name"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/txt_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_EditProfile_FullName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_height"
                    android:background="@drawable/rounded_border_edt"
                    android:fontFamily="@font/chivo_regular"
                    android:hint="Full Name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="50"
                    android:nextFocusDown="@id/edt_EditProfile_Email"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Kristi Hines Rodriguez"
                    android:textColor="@color/txt_color"
                    android:textColorHint="@color/txt_hint_color"
                    android:textSize="@dimen/txt_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_height"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="Status"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/txt_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_EditProfile_Status"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_height"
                    android:background="@drawable/rounded_border_edt"
                    android:fontFamily="@font/chivo_regular"
                    android:hint="Status Message"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:nextFocusDown="@id/edt_EditProfile_Address"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="When we give cheerfully and accept gratefully, everyone is blessed."
                    android:textColor="@color/txt_color"
                    android:textColorHint="@color/txt_hint_color"
                    android:textSize="@dimen/txt_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_height"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="Email Address"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/txt_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_EditProfile_Email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_height"
                    android:background="@drawable/rounded_border_edt"
                    android:fontFamily="@font/chivo_regular"
                    android:hint="Email Address"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:nextFocusDown="@id/edt_EditProfile_Organisation"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="kristihines@mail.com"
                    android:textColor="@color/txt_color"
                    android:textColorHint="@color/txt_hint_color"
                    android:textSize="@dimen/txt_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_height"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="User Type"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/txt_size" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border_edt">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_EditProfile_UserType"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edt_height"
                        android:background="@color/transparent"
                        android:fontFamily="@font/chivo_regular"
                        android:gravity="center_vertical"
                        android:hint="User Type"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Individual"
                        android:textColor="@color/txt_color"
                        android:textColorHint="@color/txt_hint_color"
                        android:textSize="@dimen/txt_size" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/edt_height"
                        android:layout_height="@dimen/edt_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="17dp"
                        android:src="@drawable/ic_down_arrow" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_height"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="Corporate / Organization"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/txt_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_EditProfile_Organisation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_height"
                    android:background="@drawable/rounded_border_edt"
                    android:fontFamily="@font/chivo_regular"
                    android:hint="Corporate / Organization"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="50"
                    android:nextFocusDown="@id/edt_EditProfile_MoNumber"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Youngistan Group"
                    android:textColor="@color/txt_color"
                    android:textColorHint="@color/txt_hint_color"
                    android:textSize="@dimen/txt_size" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_height"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="Phone Number"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/txt_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border_edt"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/img_height"
                        android:layout_height="@dimen/img_height"
                        android:padding="10dp"
                        android:src="@drawable/ic_us_flag" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_EditProfile_MoNumber_Code"
                        android:layout_width="60dp"
                        android:layout_height="@dimen/edt_height"
                        android:fontFamily="@font/chivo_regular"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="+91"
                        android:textAllCaps="false"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/txt_size" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/border_color" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_EditProfile_MoNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edt_height"
                        android:background="@color/transparent"
                        android:fontFamily="@font/chivo_regular"
                        android:hint="0000 0000 0000"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="10"
                        android:nextFocusDown="@id/edt_EditProfile_Date"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="8866135566"
                        android:textColor="@color/txt_color"
                        android:textColorHint="@color/txt_hint_color"
                        android:textSize="@dimen/txt_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/txt_height"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:text="Date"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/txt_size" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_EditProfile_Date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edt_height"
                            android:background="@drawable/rounded_border_edt"
                            android:fontFamily="@font/chivo_regular"
                            android:hint="0"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="50"
                            android:nextFocusDown="@id/edt_EditProfile_Year"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="1"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/txt_hint_color"
                            android:textSize="@dimen/txt_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.8"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/txt_height"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:text="Month"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/txt_size" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_border_edt">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_EditProfile_Month"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edt_height"
                                android:background="@color/transparent"
                                android:fontFamily="@font/chivo_regular"
                                android:gravity="center_vertical"
                                android:hint="Month"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="September"
                                android:textColor="@color/txt_color"
                                android:textColorHint="@color/txt_hint_color"
                                android:textSize="@dimen/txt_size" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/edt_height"
                                android:layout_height="@dimen/edt_height"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="17dp"
                                android:src="@drawable/ic_down_arrow" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/txt_height"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:text="Years"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/txt_size" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_EditProfile_Year"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edt_height"
                            android:background="@drawable/rounded_border_edt"
                            android:fontFamily="@font/chivo_regular"
                            android:hint="0000"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="4"
                            android:nextFocusDown="@id/edt_EditProfile_Status"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="1"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/txt_hint_color"
                            android:textSize="@dimen/txt_size" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_height"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="Your Gender"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/txt_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border_edt"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:button="@drawable/customradiobutton"
                            android:checked="true" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_EditProfile_Gender_Male"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edt_height"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:fontFamily="@font/chivo_regular"
                            android:gravity="center_vertical"
                            android:hint="User Type"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Male"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/txt_hint_color"
                            android:textSize="@dimen/txt_size" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/edt_height"
                            android:layout_height="@dimen/edt_height"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:src="@drawable/ic_male_selected" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border_edt"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:button="@drawable/customradiobutton"
                            android:checked="false" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_EditProfile_Gender_Female"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edt_height"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:fontFamily="@font/chivo_regular"
                            android:gravity="center_vertical"
                            android:hint="User Type"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Female"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/txt_hint_color"
                            android:textSize="@dimen/txt_size" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/edt_height"
                            android:layout_height="@dimen/edt_height"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:src="@drawable/ic_female" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_height"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="Your Country"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/txt_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_edt"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/img_height"
                        android:layout_height="@dimen/img_height"
                        android:padding="10dp"
                        android:src="@drawable/ic_us_flag" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_EditProfile_Country"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edt_height"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:fontFamily="@font/chivo_regular"
                        android:gravity="center_vertical"
                        android:hint="Your Country"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="United States of America"
                        android:textColor="@color/txt_color"
                        android:textColorHint="@color/txt_hint_color"
                        android:textSize="@dimen/txt_size" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/edt_height"
                        android:layout_height="@dimen/edt_height"
                        android:padding="17dp"
                        android:src="@drawable/ic_down_arrow" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_height"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="Your Address"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/txt_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_EditProfile_Address"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="@drawable/rounded_border_edt"
                    android:fontFamily="@font/chivo_regular"
                    android:gravity="top"
                    android:hint="Your Address"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:maxLength="500"
                    android:overScrollMode="always"
                    android:padding="10dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
                    android:textColor="@color/txt_color"
                    android:textColorHint="@color/txt_hint_color"
                    android:textSize="@dimen/txt_size"
                    tools:ignore="HardcodedText" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_EditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_corner_button"
                    android:fontFamily="@font/chivo_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="10dp"
                    android:text="Save Changes"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>