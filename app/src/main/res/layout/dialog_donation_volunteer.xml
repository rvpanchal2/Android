<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_Dlg_Donation_Volunteer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top_corner_dialog"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="200dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <View
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/border_color" />

    <View
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/border_color" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/graphik_semibold"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:text="Charity Progress"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/txt_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/rounded_corner_button_required"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_Dlg_Donation_Volunteer_Required"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:fontFamily="@font/graphik_medium"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:lines="1"
                                android:text="₹ 10,000"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/txt_small_size" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/graphik_medium"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:lines="1"
                                android:text="Required"
                                android:textColor="@color/txt_sub_color"
                                android:textSize="@dimen/txt_extra_small_size" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_required" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/rounded_corner_button_received"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_Dlg_Donation_Volunteer_Received"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:fontFamily="@font/graphik_medium"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:lines="1"
                                android:text="₹ 10,000"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/txt_small_size" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/graphik_medium"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:lines="1"
                                android:text="Received"
                                android:textColor="@color/txt_sub_color"
                                android:textSize="@dimen/txt_extra_small_size" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_received" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/rounded_corner_button_pledge"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_Dlg_Donation_Volunteer_Pledge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:fontFamily="@font/graphik_medium"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:lines="1"
                                android:text="₹ 10,000"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/txt_small_size" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/graphik_medium"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:lines="1"
                                android:text="Pledge"
                                android:textColor="@color/txt_sub_color"
                                android:textSize="@dimen/txt_extra_small_size" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_pledge" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/graphik_semibold"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="Select You Donate"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/txt_size" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chivo_regular"
                android:includeFontPadding="false"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:text="You can donate with select one of below"
                android:textColor="@color/txt_sub_color"
                android:textSize="@dimen/txt_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border_edt"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/rounded_corner_button_trans"
                            android:padding="7dp"
                            android:src="@drawable/ic_temp_category" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/graphik_medium"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:paddingLeft="10dp"
                            android:text="Manager"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/txt_small_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border_edt"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:fontFamily="@font/graphik_medium"
                            android:gravity="center_vertical"
                            android:hint="0"
                            android:imeOptions="actionDone"
                            android:includeFontPadding="false"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="4"
                            android:paddingLeft="15dp"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/txt_hint_color"
                            android:textSize="@dimen/txt_size" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@drawable/rounded_corner_right"
                            android:fontFamily="@font/chivo_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Prsn"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/txt_hint_color"
                            android:textSize="@dimen/txt_small_size" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border_edt"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/rounded_corner_button_trans"
                            android:padding="7dp"
                            android:src="@drawable/ic_temp_category" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/graphik_medium"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:paddingLeft="10dp"
                            android:text="Organizer"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/txt_small_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border_edt"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:fontFamily="@font/graphik_medium"
                            android:gravity="center_vertical"
                            android:hint="0"
                            android:imeOptions="actionDone"
                            android:includeFontPadding="false"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="4"
                            android:paddingLeft="15dp"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/txt_hint_color"
                            android:textSize="@dimen/txt_size" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@drawable/rounded_corner_right"
                            android:fontFamily="@font/chivo_regular"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Qty"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/txt_hint_color"
                            android:textSize="@dimen/txt_small_size" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border_edt"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/rounded_corner_button_trans"
                            android:padding="7dp"
                            android:src="@drawable/ic_temp_category" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/graphik_medium"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:paddingLeft="10dp"
                            android:text="Accountant"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/txt_small_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border_edt"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:fontFamily="@font/graphik_medium"
                            android:gravity="center_vertical"
                            android:hint="0"
                            android:imeOptions="actionDone"
                            android:includeFontPadding="false"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="4"
                            android:paddingLeft="15dp"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/txt_hint_color"
                            android:textSize="@dimen/txt_size" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@drawable/rounded_corner_right"
                            android:fontFamily="@font/chivo_regular"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Pcs"
                            android:textColor="@color/txt_color"
                            android:textColorHint="@color/txt_hint_color"
                            android:textSize="@dimen/txt_small_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_height"
                    android:gravity="center_vertical"
                    android:text="Explain what your donate"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/txt_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_EditProfile_Address"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="@drawable/rounded_border_edt"
                    android:fontFamily="@font/chivo_regular"
                    android:gravity="top"
                    android:hint="Your Address"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:maxLength="500"
                    android:overScrollMode="always"
                    android:padding="10dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:text="Would love to donate for Nutrition programs as well..!!"
                    android:textColor="@color/txt_color"
                    android:textColorHint="@color/txt_hint_color"
                    android:textSize="@dimen/txt_size"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/divider_color" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Dlg_Donation_Volunteer_Done"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_corner_button"
                android:fontFamily="@font/chivo_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="10dp"
                android:text="Donate Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>