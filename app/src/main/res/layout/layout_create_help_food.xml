<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/border_color" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/graphik_semibold"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="Food"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt_size" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chivo_regular"
            android:includeFontPadding="false"
            android:paddingBottom="20dp"
            android:text="Select Role"
            android:textColor="@color/txt_sub_color"
            android:textSize="@dimen/txt_size" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_Create_Help_Food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Create_Help_Food_AddRole"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_corner_button_trans"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:fontFamily="@font/chivo_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="+ Add New Need"
            android:textAllCaps="false"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/txt_size" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/border_color" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>