<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_Tab_Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_Tab_Home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_tab_home" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_Tab_Home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/chivo_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lines="1"
            android:text="dhsk"
            android:textColor="@color/txt_tab_home_color"
            android:textSize="@dimen/txt_extra_small_size" />
    </LinearLayout>
</LinearLayout>