<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_Dlg_Review"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top_corner_dialog"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="200dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_success" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/graphik_semibold"
        android:gravity="center"
        android:padding="20dp"
        android:text="Success"
        android:textColor="@color/txt_color"
        android:textSize="@dimen/txt_size" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chivo_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="Your Donation has been made Successfully"
        android:textColor="@color/txt_sub_color"
        android:textSize="@dimen/txt_size" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/graphik_semibold"
        android:gravity="center"
        android:padding="20dp"
        android:text="Rate your experience"
        android:textColor="@color/txt_color"
        android:textSize="@dimen/txt_size" />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/rb_Give_Reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:numStars="5"
        app:srb_borderColor="@color/theme_yellow_color"
        app:srb_fillColor="@color/theme_yellow_color"
        app:srb_starBorderWidth="5"
        app:srb_starSize="40dp"
        app:srb_stepSize="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_EditProfile_Address"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@drawable/rounded_border_edt"
            android:fontFamily="@font/chivo_regular"
            android:gravity="top"
            android:hint="Share Your Experience"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLength="500"
            android:overScrollMode="always"
            android:padding="10dp"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:textColor="@color/txt_color"
            android:textColorHint="@color/txt_hint_color"
            android:textSize="@dimen/txt_size"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/divider_color" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Dlg_Review_Done"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner_button"
        android:fontFamily="@font/chivo_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="10dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size" />
</LinearLayout>