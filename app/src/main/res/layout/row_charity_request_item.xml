                    android:layout_height="match_parent"
                    custom:donut_circle_starting_degree="270"
                    custom:donut_finished_color="@color/theme_color"
                    custom:donut_finished_stroke_width="3dp"
                    custom:donut_max="100"
                    custom:donut_progress="25"
                    custom:donut_text_color="@color/transparent"
                    custom:donut_unfinished_color="@color/border_color"
                    custom:donut_unfinished_stroke_width="3dp" />

                <TextView
                    android:id="@+id/txt_Row_Charity_Request_Progress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="25%"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/txt_size" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_Row_Charity_Request_ProgressT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/graphik_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="Food"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/txt_small_size" />
        </LinearLayout>

